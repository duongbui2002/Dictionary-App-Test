<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/11.0.2" stylesheets="@css/style.css"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainWindowController">
    <center>
        <VBox style="-fx-background-color: white">
            <TextArea fx:id="itemDetailsTextArea" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
    <left>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="25.4" minHeight="10.0" prefHeight="22.4" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="88.4" minHeight="10.0" prefHeight="88.4" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <ListView fx:id="listView" onKeyPressed="#handleKeyPressed" prefHeight="195.0" prefWidth="100.0"
                          style="-fx-font-size: 20" GridPane.columnIndex="0" GridPane.columnSpan="2"
                          GridPane.rowIndex="1" GridPane.rowSpan="2">
                </ListView>
                <TextField fx:id="textSearch" prefHeight="60.0" prefWidth="181.0" GridPane.columnSpan="2">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
            </children>
        </GridPane>
    </left>
    <top>
        <ToolBar>
            <HBox>
                <Button mnemonicParsing="false" onAction="#showNewWordDialog">
                    <tooltip>
                        <Tooltip text="Add a new  word"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" translateZ="5.0">
                            <image>
                                <Image url="@ImageIcon/list-plus.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            <Button fx:id="buttonSwitch" mnemonicParsing="false">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0">
                        <image>
                            <Image url="@ImageIcon/translate (2).png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>

    </top>

</BorderPane>
